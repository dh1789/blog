{
  "name": "@blog/cli",
  "version": "0.1.0",
  "description": "WordPress 자동화 CLI 도구",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blog": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --dts --external dotenv",
    "build": "tsup src/index.ts --format esm --dts --minify --external dotenv",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@blog/core": "workspace:*",
    "@blog/shared": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
