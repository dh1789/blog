{
  "name": "@blog/core",
  "version": "0.1.0",
  "description": "WordPress API 클라이언트 및 콘텐츠 처리 핵심 로직",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsup src/index.ts --watch --format esm --external @blog/shared",
    "build": "tsup src/index.ts --format esm --minify --external @blog/shared",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@blog/shared": "workspace:*",
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-ads-api": "^21.0.0",
    "gray-matter": "^4.0.3",
    "ink": "^4.4.1",
    "open": "^10.0.3",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "snoowrap": "^1.23.0",
    "socket.io": "^4.6.1",
    "transliteration": "^2.3.5",
    "unified": "^11.0.4",
    "wpapi": "^1.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.45",
    "@types/wpapi": "^1.1.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
