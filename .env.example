# ========================================
# WordPress 연결 설정
# ========================================
# WordPress 사이트 URL (예: https://your-blog.com)
WORDPRESS_URL=https://your-blog.com

# WordPress 사용자명
WORDPRESS_USERNAME=your-username

# WordPress Application Password (보안 > 애플리케이션 비밀번호에서 생성)
WORDPRESS_APP_PASSWORD=your-application-password

# ========================================
# 광고 설정 (AdSense)
# ========================================
# AdSense 클라이언트 ID
ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxx

# AdSense 광고 슬롯 ID
ADSENSE_SLOT_ID=xxxxxxxxxx

# ========================================
# 기본 설정
# ========================================
# 기본 언어 (ko 또는 en)
DEFAULT_LANGUAGE=ko

# 기본 포스트 상태 (draft 또는 publish)
DEFAULT_POST_STATUS=draft

# 기본 목표 단어 수
DEFAULT_WORDS=2000

# ========================================
# AI 이미지 생성 (DALL-E)
# ========================================
# OpenAI API 키 (https://platform.openai.com/api-keys)
# DALL-E 이미지 생성 및 Claude Code 통합에 필요
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# 트렌드 모니터링
# ========================================
# Twitter API Bearer Token (Optional)
# Twitter 트렌드 수집에 필요 (없으면 Reddit, HN만 사용)
# 발급: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Reddit API (Optional - 현재 공개 API 사용으로 불필요)
# 향후 인증 API 사용 시 필요할 수 있음
# REDDIT_CLIENT_ID=xxxxxxxxxxxxxxxx
# REDDIT_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# Google Ads API (키워드 수익성 분석)
# ========================================
# Google Ads 개발자 토큰
# 발급: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token

# Google Ads OAuth 2.0 클라이언트 ID
# Google Cloud Console에서 생성: https://console.cloud.google.com/apis/credentials
GOOGLE_ADS_CLIENT_ID=your-client-id.apps.googleusercontent.com

# Google Ads OAuth 2.0 클라이언트 시크릿
GOOGLE_ADS_CLIENT_SECRET=your-client-secret

# Google Ads OAuth 2.0 리프레시 토큰
# OAuth 인증 플로우를 통해 발급 (docs/GOOGLE_ADS_SETUP.md 참고)
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token

# Google Ads 고객 ID (10자리 숫자, 하이픈 제외)
# Google Ads 계정 우측 상단에서 확인 가능
GOOGLE_ADS_CUSTOMER_ID=1234567890

# ========================================
# 분석 대시보드 (미구현)
# ========================================
# WordPress 분석 플러그인 (jetpack, google-analytics, 등)
# WORDPRESS_ANALYTICS_PLUGIN=jetpack

# Google Analytics 설정 (Optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X
# GA_VIEW_ID=XXXXXXXXX
