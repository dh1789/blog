{
  "name": "wordpress-automation",
  "version": "0.1.0",
  "private": true,
  "description": "WordPress + Avada 블로그 콘텐츠 관리 및 광고 수익 최적화 자동화 도구",
  "keywords": [
    "wordpress",
    "automation",
    "blog",
    "cli",
    "avada",
    "content-management"
  ],
  "author": "idongho",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @blog/cli dev",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "1.6.1",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.55.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  }
}
